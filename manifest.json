{
  "name": "CopyNinja",
  "version": "1.0",
  "description": "A Multi-Item Clipboard!",
  "permissions": ["activeTab", "declarativeContent", "storage"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["jquery.min.js", "./main.js"]
    }
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "64": "images/ninja2.png"
    }
  },
  "icons": {
    "64": "images/ninja2.png"
  },
  "manifest_version": 2
}
