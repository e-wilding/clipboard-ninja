{
  "manifest_version": 2,
  "name": "CopyNinja",
  "version": "1.0",
  "description": "Add multiple items to your clipboard.",
  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "js": ["jquery.min.js", "./main.js"],
      "css": ["index.css"]
    }
  ],

  "browser_action" : { 
    "popup": "popup.html" 
  }
}